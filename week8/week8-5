# https://school.programmers.co.kr/learn/courses/30/lessons/42626
scoville = [1, 2, 3, 9, 10, 12]
K = 7
def solution(scoville, K):
    count = 0
    scoville.sort()

    while scoville[0] < K:
        
        if len(scoville) < 2:
            return -1

        mix_scoville = scoville[0] + scoville[1]*2
        scoville.append(mix_scoville)

        del scoville[0:2]
        scoville.sort()
        count += 1
        
    return count
print(solution(scoville, K))
